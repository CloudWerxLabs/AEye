{
  "manifest_version": 3,
  "name": "AEye",
  "version": "0.1.0",
  "description": "AI sidebar powered by xAI Grok",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo/logo_16x16.png",
      "48": "logo/logo_48x48.png",
      "128": "logo/logo_128_x_128.png"
    }
  },
  "icons": {
    "16": "logo/logo_16x16.png",
    "48": "logo/logo_48x48.png", 
    "128": "logo/logo_128_x_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
